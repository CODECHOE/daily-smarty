.row.vote-link-wrapper
  .col-md-12
    = link_to "<i class='fa fa-arrow-up upvote-link #{arrow_color(post, 'up')}' aria-hidden='true'></i>".html_safe, upvote_path(post_slug: post.slug)
  .col-md-12
    .center-text
      .vote-counter
        = post.vote_count.number_of_votes || 0
  .col-md-12
    = link_to "<i class='fa fa-arrow-down downvote-link #{arrow_color(post, 'down')}' aria-hidden='true'></i>".html_safe, downvote_path(post_slug: post.slug)
